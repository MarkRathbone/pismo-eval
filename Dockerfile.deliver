FROM golang:1.24

WORKDIR /app

RUN apt-get update \
    && apt-get install -y netcat-openbsd awscli \
    && apt-get clean

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN go build -o main ./cmd/deliver

COPY scripts/wait-for-table-and-queue.sh /app/wait-for-table-and-queue.sh
RUN chmod +x /app/wait-for-table-and-queue.sh

ENTRYPOINT ["/app/wait-for-table-and-queue.sh", "./main"]
